#:kivy 2.0.0
#: set input_widget_size '100dp', '44dp'

Main:

<HorizontalBoxLayout@BoxLayout>:
    orientation: 'horizontal'
    spacing: dp(16)

<BoxLayout>:
    spacing: dp(16)

<CustomText@TextInput>:
    size_hint: None, None
    size: input_widget_size
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<Spinner>:
    size_hint: None, None
    size: input_widget_size
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<MainLabel@Label>:
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint_x: None
    width: max(self.texture_size[0], dp(150))
    bold: True
    # Right border
    border_width: 1
    canvas:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.x + self.width - self.border_width, self.y
            size: self.border_width, self.height
    # Background color
    # canvas.before:
    #     Color:
    #         rgba: 1, 0, 0, 1
    #     Rectangle:
    #         pos: self.pos
    #         size: self.size

<SubLabel@Label>:
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    # pos_hint: {'center_y': 0.5}
    size_hint_x: None
    size: self.texture_size
    # canvas.before:
    #     Color:
    #         rgba: 0, 1, 0, 1
    #     Rectangle:
    #         pos: self.pos
    #         size: self.size

<Main@BoxLayout>:
    orientation: 'vertical'
    spacing: '0dp'
    padding: '20dp'
    BoxLayout:
        orientation: 'horizontal'
        MainLabel:
            text: 'Usecase'
        BoxLayout:
            orientation: 'horizontal'
            Spinner:
                text: '1.3'
                values: '1.3', '3.5', '3.6'
    
    BoxLayout:
        orientation: 'horizontal'
        MainLabel:
            text: 'Probes'
        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(32)
            SubLabel:
                text: 'Src'
            CustomText:
            SubLabel:
                text: 'Dst'
            CustomText:
    
    BoxLayout:
        orientation: 'horizontal'
        MainLabel:
            id: lbl1
            text: 'Test Campaign ID'

        BoxLayout:
            orientation: 'horizontal'
            CustomText:
    Button:
        text: 'Start'
        size_hint: None, None
        size: '240dp', '50dp'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
