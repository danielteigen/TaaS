#:kivy 2.0.0
#:import MDToolbar kivymd.uix.toolbar.MDToolbar
#:import colors kivymd.color_definitions.colors
#: set input_widget_size '100dp', '36dp'

MainWidget:

<HorizontalBoxLayout@BoxLayout>:
    orientation: 'horizontal'
    spacing: dp(18)

<VerticalBoxLayout@BoxLayout>:
    orientation: 'vertical'
    spacing: dp(18)

<BorderedBox@BoxLayout>:
    border_width: 1
    padding: dp(8), 0
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.5
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
            # rectangle: self.x, self.y + 0.1*self.height, self.width, 0.8*self.height

<CustomText@TextInput>:
    size_hint: None, None
    size: input_widget_size
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    font_size: sp(16)
    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

<CustomSpinner@Spinner>:
    size_hint: None, None
    size: input_widget_size
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<SmallButton@MDRaisedButton>:
    size_hint: 1, None
    size: input_widget_size
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    md_bg_color_disabled: colors['Gray']['400']

<Separator@Widget>:
    size_hint_x: None
    width: dp(1)
    border_width: 1
    canvas:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.x + self.width - self.border_width, self.y
            size: self.border_width, self.height

<RedBackground@Widget>:
    canvas.before:
        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<MainLabel@MDLabel+Separator>:
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint_x: None
    width: max(self.texture_size[0], dp(130))
    bold: True

<SubLabel@MDLabel>:
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint_x: None
    size: self.texture_size
    adaptive_size: True

###########################################################

# Widget tree

<MainWidget@MDBoxLayout>:
    orientation: 'vertical'
    md_bg_color: app.theme_cls.bg_dark

    MDToolbar:
        title: 'TaaS GUI'
        right_action_items: [["cog", lambda x: app.open_settings()]]
    VerticalBoxLayout:
        padding: '20dp'

        MDDropDownText:
            id: usecase
            items: '1.3', '3.5', '3.6'
            hint_text: "Usecase"
            pos_hint: {'center_x': .5, 'center_y': .5}

        MDDropDownText:
            id: campaign_name
            hint_text: "Test campaign"
            pos_hint: {'center_x': .5, 'center_y': .5}

        HorizontalBoxLayout:
            SmallButton:
                text: 'Get available campaigns'
                on_press: app.on_get_campaigns(campaign_filter.text)
                disabled: app.disable_buttons
            MDTextField:
                id: campaign_filter
                hint_text: "Filter"
                pos_hint: {'center_x': .5, 'center_y': .5}

        HorizontalBoxLayout:
            SmallButton:
                text: 'Auth'
                on_press: app.on_auth()
            SmallButton:
                text: 'Excute'
                disabled: app.disable_buttons
                on_press: app.on_excute(campaign_name.text)
            SmallButton:
                text: 'Stop'
                disabled: app.disable_buttons
                on_press: app.on_stop()
            SmallButton:
                text: 'Status'
                disabled: app.disable_buttons
                on_press: app.on_status()

        TextInput:
            size_hint_y: 3
            id: log
            background_color: (0, 0, 0, 1)
            foreground_color: (0, 1, 0, 1)
            multiline: True
